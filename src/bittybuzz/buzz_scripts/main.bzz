function init() {
  counter = 0;
  stig = stigmergy.create(1);
  if(id == 2){
    stig.put("leader", 2);
  }
}

function step() {
  if(counter == 100 and id == 2) {
    var data = stig.get("leader");
    log("Current data in stig: ", data, " size: ", stig.size());
    counter = 0;
  }
  counter = counter + 1;
}
